# Database Configuration
DATABASE_URL=postgresql://oauth2_user:oauth2_password@postgres:5432/oauth2_auth

# Temporal Configuration
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=oauth2-task-queue

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-256-bits-long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Configuration
OAUTH2_CLIENT_ID=oauth2-client
OAUTH2_CLIENT_SECRET=oauth2-client-secret-change-in-production
OAUTH2_REDIRECT_URI=http://localhost:3000/callback
OAUTH2_AUTHORIZATION_CODE_EXPIRE_MINUTES=10

# Email Configuration (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@oauth2auth.com
EMAIL_FROM_NAME=OAuth2 Auth Service

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Security
PASSWORD_MIN_LENGTH=8
EMAIL_VERIFICATION_EXPIRE_HOURS=24
PASSWORD_RESET_EXPIRE_HOURS=1

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600